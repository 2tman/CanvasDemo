<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <club.iandroid.sevenchartslib.ComboChart
        android:id="@+id/mBarChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#fff"
        android:paddingRight="50dp">

        <club.iandroid.sevenchartslib.BarLineChart
            android:id="@+id/mBaseBarChart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <club.iandroid.sevenchartslib.YRender
            android:id="@+id/yRender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />


    </club.iandroid.sevenchartslib.ComboChart>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">
        <EditText
            android:id="@+id/et_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go" />
    </LinearLayout>
</RelativeLayout>